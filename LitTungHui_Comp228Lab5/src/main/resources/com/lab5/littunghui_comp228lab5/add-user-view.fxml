<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.lab5.littunghui_comp228lab5.AddUserController" hgap="10" vgap="10" style="-fx-padding: 20;">
    <columnConstraints>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="70"/>
    </columnConstraints>

    <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="fNameField" promptText="First Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="lNameField" promptText="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="addressField" promptText="Address" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Postal Code:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="postalCodeField" promptText="Postal Code" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Province:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="provinceField" promptText="Province" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="phoneField" promptText="Phone NUmber" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Button text="Add Player" onAction="#handleSubmit" GridPane.columnIndex="0" GridPane.rowIndex="6">

    </Button>
</GridPane>